<% provide(:title, "New") %>
<h1>WebCollections#new</h1>

  <%= form_with(model: @collection, url: new_path, local: true) do |f| %>

    <%= render 'shared/error_messages' %>

    <div class="form-outline mb-4">
      <%= f.label :title, class: 'form-label' %>
      <%= f.text_field :title %>
    </div>
  
    <div class="form-outline mb-4">
      <%= f.label :url %>
      <%= f.url_field :url %>
    </div>
      
      <%= f.submit 'Save', class: 'btn btn-primary btn-block mb-4' %>
  <% end %>
